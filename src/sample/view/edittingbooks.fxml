<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="4.0" prefHeight="400.0" prefWidth="202.0" vgap="4.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.editting.EditBookController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label text="Название" />
        <TextField fx:id="txtBookTitle" GridPane.columnIndex="1" />
        <Button mnemonicParsing="false" onAction="#onSaveClick" text="Сохранить" GridPane.halignment="LEFT" GridPane.rowIndex="4" />
        <Button mnemonicParsing="false" onAction="#onCancelClick" prefHeight="25.0" prefWidth="92.0" text="Отмена" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
        <Label text="Жанр" GridPane.rowIndex="1" />
        <TextField fx:id="txtBookGenre" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Тип" GridPane.rowIndex="2" />
        <TextField fx:id="txtBookType" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Количество" GridPane.rowIndex="3" />
        <TextField fx:id="txtBookNumbers_of_copies" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </children>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
    </padding>
</GridPane>
